<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="payment">
            <group id="jPay_gateway" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                <label><![CDATA[<div class="jPay-logo" style="display:inline-block; vertical-align: middle; margin: 0 20px 0 0px; width: 100%; height:60px; background-repeat: no-repeat, no-repeat, no-repeat; background-image: url('https://static.jumia.com.eg/cms/external/cms/jumiapay_en_EG/ac207077af374f38fc739199d8ec8038.jpg');"></div>]]></label>
                <field id="title" translate="label"  type="text" sortOrder="20"  showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Title</label>
                </field>
                <field id="active" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="jPayEnvironment" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Environment</label>
                    <source_model>Jumia\jPay\Model\Adminhtml\Source\jPayEnvironment</source_model>
                </field>
                <group id="jPay_sandbox" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Sandbox</label>

                    <field id="jPayCountry" translate="label" type="select" sortOrder="85" showInDefault="1" showInWebsite="1" showInStore="0">
                        <label>jPayCountry</label>
                        <source_model>Jumia\jPay\Model\Adminhtml\Source\jPayCountry</source_model>
                    </field>
                    <field id="ShopApiKey" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Shop Api Key</label>
                    </field>
                    <field id="MerchantApiKey" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Merchant Api Key</label>
                    </field>
                    <field id="sort_order" translate="label" type="text" sortOrder="160" showInDefault="1" showInWebsite="1"
                           showInStore="0">
                        <label>Sort Order</label>
                        <frontend_class>validate-number</frontend_class>
                    </field>
                </group>

            </group>
        </section>
    </system>
</config>